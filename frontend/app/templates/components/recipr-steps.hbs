{{#if steps}}
    {{#each step in steps}}
    	{{recipr-step step=step onEdit='startEdit' openedStep=openedStep onDeleteStep='deleteStep'}}
    {{/each}}
{{/if}}
{{#if addMode}}
	<div {{bind-attr class=":add-form error"}}>
		{{recipr-focus-textarea class="step-content" value=stepContent}}
		<div class="actions">
	        <button class="btn bSmall action save" {{action 'saveStep' bubbles=false}}>save</button>
	        <button class="btn bSmall action cancel" {{action 'cancelAdd' bubbles=false }}>cancel</button>
	    </div>
    </div>
{{else}}
	<div class="btn bSmall add-step" {{action 'addStep'}}>add next step</div>
{{/if}}
